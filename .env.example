# API Configuration (optional - if not set, API key check is disabled)
API_KEY=your-secret-api-key-here
SERVICE_NAME=tender_matching_service
SERVICE_PORT=8002

# Unique Products MongoDB (database with deduplicated products)
UNIQUE_MONGO_HOST=localhost
UNIQUE_MONGO_PORT=27017
UNIQUE_MONGO_USER=
UNIQUE_MONGO_PASS=
UNIQUE_MONGO_AUTHSOURCE=admin
UNIQUE_MONGO_AUTHMECHANISM=SCRAM-SHA-256
UNIQUE_MONGO_DIRECT_CONNECTION=true
UNIQUE_MONGODB_DATABASE=unique_products
UNIQUE_COLLECTION_NAME=unique_products
UNIQUE_MONGO_REPLICA_SET=
UNIQUE_MONGO_TIMEOUT=10000

# Processing Settings
MIN_MATCH_SCORE=0.5
MAX_MATCHED_PRODUCTS_PER_ITEM=10

# Matching Settings
PRICE_TOLERANCE_PERCENT=20.0
ENABLE_FUZZY_MATCHING=false
FUZZY_MATCH_THRESHOLD=0.8

# OKPD2 Search Settings
OKPD2_SEARCH_DEPTH=3
OKPD2_FALLBACK_ENABLED=true
MIN_PRODUCTS_FOR_MATCHING=5
OKPD2_EXACT_MATCH_WEIGHT=2.0

# Performance Settings
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_ITEMS=10

# Cache Settings
ENABLE_OKPD2_CACHE=true
OKPD2_CACHE_TTL=3600
OKPD2_CACHE_SIZE=1000

# Logging Settings
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/tender_matching.log